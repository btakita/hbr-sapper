{
	"compilerOptions": {
		"noImplicitThis": true,
		"noEmitOnError": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"lib": ["es5", "es6", "dom", "dom.iterable"],
		"importHelpers": true,
		"target": "ES2020",
		"module": "esnext",
		"baseUrl": "src",
		"rootDir": "src",
		"outDir": "dist",
		"paths": {
			"@sapper/*": ["runtime/src/*"]
		}
	},
	"include": [
		"src",
	],
	"exclude": [
		"node_modules"
	],
	"types": [
		"@sapper"
	]
}
